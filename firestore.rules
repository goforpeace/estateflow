
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Helper function to check if a user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Default-allow rule for all collections and documents.
     * Any authenticated user can read and write to any part of the database.
     * This is permissive and suitable for initial development and prototyping.
     */
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
